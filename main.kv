FloatLayout:
    canvas:
        Color:
            rgb: utils.get_color_from_hex("#001824")
        Rectangle:
            size: self.size
            pos: self.pos
    Image:
        pos_hint: {"right":1, "top":0.9}
        size_hint: 1, 0.2
        source: "icones/hash.png"
        id: id_foto_perfil
    ScreenManager:
        pos_hint: {"right":1, "top":0.7}
        size_hint: 1, 0.7
        id: screen_manager
        LoginPage:
            name: "loginpage"
            id: loginpage
        HomePage:
            name: "homepage"
            id: homepage
        AjustesPage:
            name: "ajustespage"
            id: ajustespage
        AdicionarVendasPage:
            name: "adicionarvendaspage"
            id: adicionarvendaspage
        ListarVendedoresPage:
            name: "listarvendedorespage"
            id: listarvendedorespage
        FotoPerfilPage:
            name: "fotoperfilpage"
            id: fotoperfilpage
        AdicionarVendedorPage:
            name: "adicionarvendedorpage"
            id: adicionarvendedorpage
        TodasVendasPage:
