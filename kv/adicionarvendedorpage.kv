<AdicionarVendedorPage>:
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "icones/bg1.png"
        Label:
            pos_hint: {"right":0.9, "top":0.8}
            size_hint: 0.8, 0.1
            text: "Insira o [color=#00CFDB]ID de outro vendedor[/color] para acompanh√°-lo"
            markup: True
            bold: True
            id: id_total_vendas

        LabelButton:
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: "icones/botao.png" if self.state=="normal" else "icones/botao_apertado.png"
            text: "Adicionar Vendedor"
            on_release: app.adicionar_vendedor(id_outro_vendedor.text)
            pos_hint: {"right":0.9, "top":0.55}
            size_hint: 0.8, 0.2

        TextInput:
            pos_hint: {"right":0.9, "top":0.7}
            size_hint: 0.8, 0.1
            id: id_outro_vendedor

        Label:
            pos_hint: {"right":0.9, "top":0.4}
            size_hint: 0.8, 0.1
            text: ""
            markup: True
            bold: True
            id: id_mensagem_outro_vendedor

        #Botao Voltar
        FloatLayout:
            pos_hint: {"right":1, "top":0.12}
            size_hint: 1, 0.12
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex("#006D7E")
                Rectangle:
                    size: self.size
                    pos: self.pos
            ImageButton:
                pos_hint: {"right":0.2, "top":0.9}
                size_hint: 0.2, 0.8
                source:"icones/voltar.png"
                on_release: app.mudar_tela("ajustespage")