<ListarVendedoresPage>:
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "icones/bg1.png"

        #Lista Vendedores
        ScrollView:
            pos_hint: {"right":1, "top":0.9}
            size_hint: 1, 0.78

            GridLayout:
                cols: 1
                id: id_lista_vendedores
                spacing: 2,2

                size_hint_y: None
                height: self.minimum_height
                row_default_height: "90dp"
                row_force_default: True

        #Botao Voltar
        FloatLayout:
            pos_hint: {"right":1, "top":0.12}
            size_hint: 1, 0.12
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex("#006D7E")
                Rectangle:
                    size: self.size
                    pos: self.pos
            ImageButton:
                pos_hint: {"right":0.2, "top":0.9}
                size_hint: 0.2, 0.8
                source:"icones/voltar.png"
                on_release: app.mudar_tela("homepage")