<LoginPage>:
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "icones/bg1.png"
        Label:

            text: "CONTROLE DE [color=#00CFDB]VENDAS HASHTAG[/color]"
            markup: True
            bold: True
            pos_hint: {"right":0.9, "top":0.9}
            size_hint: 0.8, 0.2

        TextInput:
            id: email
            hint_text: "E-mail"
            pos_hint: {"right":0.9, "top":0.7}
            size_hint: 0.8, 0.1

        TextInput:
            id: senha
            password: True
            hint_text: "Senha"
            pos_hint: {"right":0.9, "top":0.55}
            size_hint: 0.8, 0.1

        Label:
            id: id_mensagem_login
            text: "[color=#00CFDB]Fa√ßa Seu Login[/color]"
            markup: True
            bold: True
            pos_hint: {"right":0.9, "top":0.4}
            size_hint: 0.8, 0.1

        LabelButton:
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: "icones/botao.png" if self.state=="normal" else "icones/botao_apertado.png"
            text: "Login"
            on_release: app.firebase.login(email.text,senha.text)
            pos_hint: {"right":0.45, "top":0.3}
            size_hint: 0.4, 0.2

        LabelButton:
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: "icones/botao.png" if self.state=="normal" else "icones/botao_apertado.png"
            text: "Criar Conta"
            on_release: app.firebase.criar_conta(email.text,senha.text)
            pos_hint: {"right":0.94, "top":0.3}
            size_hint: 0.4, 0.2

